@model WebApplication4.Models.Instructor

@{
    ViewData["Title"] = "Edit";
}


<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="InstructorId" />
    <div class="row">


        <div class="col-sm-3">
        </div>
        <div class="col-sm-5">
            <h3>EDIT INSTRUCTOR</h3>

            <div class="form-group">
                <label class="control-label">Department Name</label>
                <select asp-for="DepartmentID" class="form-control" asp-items="ViewBag.DepartmentList">
                </select>
            </div>

            <div class="form-group">
                <label class="control-label">Instructor Name</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Gender</label>
                <input asp-for="Gender" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Academic Rank</label>
                <input asp-for="ARank" class="form-control" />
            </div>

            <br />
            <div class="form-group float-right">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </div>
        <div class="col-sm-3">
        </div>
    </div>

</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>