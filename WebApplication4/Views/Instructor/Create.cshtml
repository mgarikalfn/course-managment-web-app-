@model WebApplication4.Models.Instructor
@{
    ViewData["Title"] = "Create";
}



<form asp-action="Create" method="post">

    <div class="row">


        <div class="col-sm-3">
        </div>
        <div class="col-sm-5">
            <h3>ADD INSTRUCTOR</h3>

            <div class="form-group">
                <label class="control-label">Department Name</label>
                <select asp-for="DepartmentID" class="form-control" asp-items="ViewBag.DepartmentList">
                    <option value="">~Select Department~</option>
                </select>
            </div>

            <div class="form-group">
                <label class="control-label">Instructor Name</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Gender</label>
                <input asp-for="Gender" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Academic Rank</label>
                <input asp-for="ARank" class="form-control" />
            </div>

            <br />
            <div class="form-group float-right">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
        <div class="col-sm-3">
        </div>
    </div>

</form>
