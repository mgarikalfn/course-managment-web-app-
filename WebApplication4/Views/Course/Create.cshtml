@model WebApplication4.Models.Course
@{
    ViewData["Title"] = "Create";
}



<form asp-action="Create" method="post">

    <div class="row">


        <div class="col-sm-3">
        </div>
        <div class="col-sm-5">
            <h3>CREATE COURSE</h3>

            <div class="form-group">
                <label class="control-label">Department Name</label>
                <select asp-for="DepartmentID" class="form-control" asp-items="ViewBag.DepartmentList">
                    <option value="">~Select Department~</option>
                </select>
            </div>

            <div class="form-group">
                <label class="control-label">Course Name</label>
                <input asp-for="CourseName" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Course Code</label>
                <input asp-for="CourseCode" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Credit Hour</label>
                <input asp-for="CreditHour" class="form-control" />
            </div>

            <br />
            <div class="form-group float-right">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
        <div class="col-sm-3">
        </div>
    </div>

</form>
