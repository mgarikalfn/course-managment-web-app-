@model IEnumerable<WebApplication4.Models.Semester>
@{
    int counter = 1;
    ViewData["Title"] = "Semister";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<strong>
    <a asp-action="Create" class="btn btn-success m-1"> ADD Semister</a>
</strong>

<table class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Semister Name</th>
            <th>Semister Number</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var crs in Model)
        {
            <tr>
                <td>@counter</td>
                <td>@crs.SemesterName</td>
                <td>@crs.SemesterNo</td>
           
                <td>

                    <a asp-action="Edit" title="Edit Course" asp-route-id="@crs.SemesterId" class="btn btn-primary m-1"><i class="bi bi-pencil"></i></a>
                    <a asp-action="Delete" asp-route-id="@crs.SemesterId" class="btn btn-danger">
                
                        <i class="bi bi-trash"></i>
                    </a>

                </td>
            </tr>
            counter++;
        }

    </tbody>
</table>
