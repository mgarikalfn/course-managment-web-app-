@model WebApplication4.Models.Semester

@{
    ViewData["Title"] = "Delete Semester";
}

<h1>Delete Semester</h1>

<h3>Are you sure you want to delete this semester?</h3>
<div>
    <h4>Semester</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SemesterName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SemesterName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SemesterNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SemesterNo)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="SemesterId" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
