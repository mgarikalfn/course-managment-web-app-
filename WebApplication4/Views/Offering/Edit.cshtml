@model WebApplication4.Models.Offering

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OfferingID" />
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-5">
            <h3>EDIT OFFERINGS</h3>

            <div class="form-group">
                <label class="control-label">Course Name</label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseList">
                    <option value="">~Select Course~</option>
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Instructor Name</label>
                <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.InstructorList">
                    <option value="">~Select Instructor~</option>
                </select>
                <span asp-validation-for="InstructorId" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group float-right">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

