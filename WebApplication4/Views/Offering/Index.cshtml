@model IEnumerable<WebApplication4.Models.Offering>
@{
    int counter = 1;
    ViewData["Title"] = "Offering";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<strong>
    <a asp-action="Create" class="btn btn-success m-1"> ADD Offering</a>
</strong>

<table class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Course Title</th>
            <th>Course Code</th>
            <th>CreditHours</th>
            <th>Instructor</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var crs in Model)
        {
            <tr>
                <td>@counter</td>
                <td>@crs.Course.CourseName</td>
                <td>@crs.Course.CourseCode</td>
                <td>@crs.Course.CreditHour</td>
                <td>@crs.Instructor.Name</td>
                <td>

                    <a asp-action="Edit" title="Edit Course" asp-route-id="@crs.OfferingID" class="btn btn-primary m-1"><i class="bi bi-pencil"></i></a>
                    <a asp-action="Delete" title="Delete Course" asp-route-id="@crs.OfferingID" class="btn btn-danger m-1">
                        <i class="bi bi-trash"></i>
                    </a>

                </td>
            </tr>
            counter++;
        }

    </tbody>
</table>
