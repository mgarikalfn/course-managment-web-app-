@model WebApplication4.Models.Offering

@{
    ViewData["Title"] = "Delete Offering";
}

<h1>Delete course</h1>

<h3>Are you sure you want to delete this Offering?</h3>
<div>
    <h4>Offering</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstructorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstructorId)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CourseId" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
