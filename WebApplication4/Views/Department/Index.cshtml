@model IEnumerable<WebApplication4.Models.Department>

@{
    ViewData["Title"] = "Departments";
    int counter = 1;
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<strong>
    <a asp-action="Create" class="btn btn-success m-1"> ADD Department</a>
</strong>

<table class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Department Name</th>
            <th>Department Acronym</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@counter</td>>
                <td>@department.DepartmentName</td>
                <td>@department.DepartmentAcronym</td>
                <td>

                    <a asp-action="Edit" title="Edit Course" asp-route-id="@department.DepartmentID" class="btn btn-primary m-1"><i class="bi bi-pencil"></i></a>
                    <a asp-action="Delete" title="Delete Course" asp-route-id="@department.DepartmentID" class="btn btn-danger m-1">
                        <i class="bi bi-trash"></i>
                    </a>

                </td>
            </tr>
            counter++;
        }
    </tbody>
</table>